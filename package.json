{
  "name": "prometheus",
  "version": "0.4.0",
  "type": "module",
  "description": "CLI modular para análise, diagnóstico e manutenção de projetos JavaScript/TypeScript",
  "author": "Italo C Lopes",
  "license": "MIT-0",
  "bin": {
    "prometheus": "./dist/bin/index.js"
  },
  "exports": {
    ".": "./dist/bin/index.js"
  },
  "engines": {
    "node": ">=24.12.0"
  },
  "scripts": {
    "prebuild": "rimraf dist bin",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "vitest run --passWithNoTests",
    "perf:baseline": "prometheus perf snapshot --baseline || true",
    "perf:compare": "prometheus perf compare",
    "perf:gate": "prometheus perf compare --threshold 0",
    "postbuild": "node scripts/copy-artifacts.mjs",
    "prepare": "npm run build",
    "start": "prometheus",
    "diagnosticar": "prometheus diagnosticar",
    "diagnosticar:json": "prometheus diagnosticar --json",
    "formatar": "prometheus formatar --write",
    "reestruturar": "prometheus reestruturar",
    "podar": "prometheus podar",
    "fix-types": "prometheus fix-types",
    "name": "prometheus names",
    "rename": "prometheus renames",
    "scan": "prometheus licencas scan",
    "scan:root": "prometheus licencas scan --root .",
    "notices": "prometheus licencas notices generate",
    "adn": "prometheus licencas disclaimer add",
    "verify": "prometheus licencas disclaimer verify",
    "guardian": "prometheus guardian",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint ."
  },
  "keywords": [
    "cli",
    "code-analysis",
    "linter",
    "static-analysis",
    "typescript",
    "javascript",
    "developer-tools",
    "code-quality",
    "architecture",
    "refactoring",
    "monorepo",
    "project-analysis",
    "technical-debt",
    "devtools",
    "maintenance",
    "diagnostics",
    "code-health"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-c-l-org/prometheus.git",
    "issues": {
      "url": "https://github.com/i-c-l-org/prometheus/issues"
    },
    "homepage": "https://github.com/i-c-l-org/prometheus#readme"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE*",
    "THIRD-PARTY-NOTICES.txt",
    "scripts/check-node-version.js"
  ],
  "dependencies": {
    "@babel/parser": "^7.29.0",
    "@babel/traverse": "^7.29.0",
    "@babel/types": "^7.29.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "css-tree": "^3.1.0",
    "fast-xml-parser": "^5.4.1",
    "htmlparser2": "^10.1.0",
    "java-parser": "^3.0.1",
    "micromatch": "^4.0.8",
    "ora": "^9.3.0",
    "p-limit": "^7.3.0",
    "prometheus": "file:prometheus-0.4.0.tgz",
    "xxhashjs": "^0.2.2"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.4.1",
    "husky": "^9.1.7",
    "license-checker-rseidelsohn": "^2.4.8",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.3",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "lodash": "4.17.23",
    "lodash-es": "4.17.23"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}